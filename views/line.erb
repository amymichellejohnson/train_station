<h1>Enter a station name for the <%= @found_line.line_name() %>.</h1>

<form action="/station" method="post">
  <input id="line_id" name="line_id" type="hidden" value="<%= @found_line.line_id() %>">

  <label for="station_name">Station Name:</label>
  <input id="station_name" name="station_name" type="text">

  <button type="submit">Add</button>
</form>

<% if @found_line.stations().any?() %>
  <h3>Here are all the stations for this line:</h3>

  <ul>
    <% @found_line.stations().each() do |station| %>
    <li><a href="/station/<%= station.station_id() %>"> <%= station.station_name() %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no stations yet!</p>
<% end %>

<a href="/">Return to Main Page</a>
